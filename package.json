{
  "name": "reflex",
  "description": "A first-generation Solidity framework for upgradeable modularized applications.",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "lint:check": "prettier --check 'src/**/*.sol' && solhint --config .solhint.json 'src/**/*.sol'",
    "lint:fix": "prettier --write 'src/**/*.sol' && solhint --config .solhint.json 'src/**/*.sol' --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "lint-staged": {
    "*.{sol,json,md,yml}": [
      "prettier --write"
    ]
  }
}
