{
  "name": "reflex",
  "description": "A first-generation Solidity framework for upgradeable modules.",
  "version": "0.1.0",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "lint:check": "prettier --check 'src/**/*.sol' && solhint --config .solhint.json 'src/**/*.sol'",
    "lint:fix": "prettier --write 'src/**/*.sol' && solhint --config .solhint.json 'src/**/*.sol' --fix",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-rc.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "lint-staged": {
    "*.{sol,json,md,yml}": [
      "prettier --write"
    ]
  }
}
